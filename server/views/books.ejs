<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>

    <div>
        <% if(books != null){ %>
            <% books.forEach(book => { %>
            <a href="">
                <h3><%= book.title %></h3>
                <h4><%= book.author %></h4>
                <p><%= book.description %></p>
                <p><%= book.year_published %></p>
                <p><%= book.category %></p>
            </a>
            <% }) %>
        <% } else { %>
            <p>No books available</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body> 
</html>