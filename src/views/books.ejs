<div>
    <% if(books !=null){ %>
        <% books.forEach(book=> { %>
            <a href="/api/books/<%= book.id %>">
                <img src="<%= book.book_cover_path.slice(11) %>" alt="<%= book.title %>">
                <h3>
                    <%= book.title %>
                </h3>
                <h4>
                    <%= book.author %>
                </h4>
                <p>
                    <%= book.year_published %>
                </p>
                <p>
                    <%= book.category %>
                </p>
            </a>
            <% }) %>
                <% } else { %>
                    <p>No books available</p>
                    <% } %>
</div>